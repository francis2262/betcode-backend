<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Bet Code Converter</title>
</head>
<body>
    <h1>Bet Code Converter</h1>
    <input type="text" id="betCode" placeholder="Enter SportyBet code">
    <button onclick="convert()">Convert</button>
    <p id="result"></p>

    <script>
        async function convert() {
            const code = document.getElementById("betCode").value;
            const response = await fetch("https://YOUR_BACKEND_URL/convert", {
                method: "POST",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({ code })
            });
            const data = await response.json();
            document.getElementById("result").textContent =
                `Converted: ${data.converted_code}`;
        }
    </script>
</body>
</html>
